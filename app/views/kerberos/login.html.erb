<table>
    <%= form_tag(kerberos_login_path, method: :post) do %>
        <tr>
            <th>ユーザー名</th>
            <td><%= text_field_tag :name %></td>
        </tr>
        <tr>
            <th>パスワード</th>
            <td><%= password_field_tag :password %></td>
        </tr>
        <tr>
            <td colspan="2"><%= submit_tag :ログイン %></td>
        </tr>
    <% end %>
</table>